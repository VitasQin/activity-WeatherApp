.jqdk{
  width: 90%;
  height:350rpx;  
  background-image: linear-gradient(to right, rgba(7, 53, 180, 0.103) , rgba(229, 226, 226, 0.253));
  margin:20rpx auto;
  border-radius: 10rpx;
  box-shadow: 0 0 20px rgb(0 0 0 / 20%);
}
.jqdk_title{
  line-height: 80rpx;
  margin-left: 50rpx;
  letter-spacing: 4rpx;
  color: rgb(5, 67, 124);
  font-weight: 600;
}
.jqdk_main{
  width: 98%;
  height: 200rpx;
  border-left: 10rpx solid rgb(46, 81, 146);
}
.jqdk_main_text1{
  margin-left: 30rpx;
  line-height: 90rpx;
  font-weight: 700;
  font-size: 35rpx;
  letter-spacing: 3rpx;
}
.jqdk_main_text2{
  margin-left: 30rpx;
  line-height: 60rpx;
  color: rgb(118, 119, 121);
  font-size: 30rpx;
  letter-spacing: 3rpx;
}
.ksj{
  width: 500rpx;
  height: 500rpx;
  margin: 90rpx auto;
}
.ksj image{
  width: 100%;
  height: 100%;
}